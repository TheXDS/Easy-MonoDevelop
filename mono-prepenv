#! /bin/bash
# Este script prepara el entorno para poder compilar MonoDevelop.
#
# Es compatible con Ubuntu, y probablemente con otras distribuciones derivadas,
# como ser Linux Mint. Solo es necesario ejecutar este script la primera vez
# que se compile MonoDevelop en un equipo!
#
# Autor: César Andrés Morgan <xds_xps_ivx@hotmail.com>

. /etc/os-release
sudo apt-key adv --keyserver hkp://keyserver.ubuntu.com:80 --recv-keys 3FA7E0328081BFF6A14DA29AA6A19B38D3D831EF
echo "deb http://download.mono-project.com/repo/ubuntu $UBUNTU_CODENAME main" | sudo tee /etc/apt/sources.list.d/mono-official.list
curl https://packages.microsoft.com/keys/microsoft.asc | gpg --dearmor > microsoft.gpg
sudo mv microsoft.gpg /etc/apt/trusted.gpg.d/microsoft.gpg
echo "deb [arch=amd64] https://packages.microsoft.com/repos/microsoft-ubuntu-$UBUNTU_CODENAME-prod $UBUNTU_CODENAME main" | sudo tee /etc/apt/sources.list.d/dotnetdev.list
sudo apt update 
sudo apt upgrade -y
sudo apt install -y autoconf automake cmake fsharp git gnome-sharp2 gtk-sharp2 libssh2-1-dev mono-complete referenceassemblies-pcl zlib1g-dev autopoint cli-common-dev debhelper desktop-file-utils dh-autoreconf dh-strip-nondeterminism gir1.2-atk-1.0 gir1.2-freedesktop gir1.2-gdkpixbuf-2.0 gir1.2-gtk-2.0 gir1.2-pango-1.0 gir1.2-soup-2.4 icu-devtools intltool-debian libapr1 libapr1-dev libaprutil1 libaprutil1-dev libarchive-zip-perl libatk1.0-dev libcairo-script-interpreter2 libcairo2-dev libenchant-dev libexpat1-dev libfile-stripnondeterminism-perl libfontconfig1-dev libfreetype6-dev libgdk-pixbuf2.0-dev libglib2.0-bin libglib2.0-dev libgtk2.0-dev libgtkspell-dev libgtkspell0 libharfbuzz-dev libharfbuzz-gobject0 libice-dev libicu-dev libjavascriptcoregtk-1.0-dev libldap2-dev libmono-addins-cil-dev libmono-addins-gui-cil-dev libmono-addins-gui0.2-cil libmono-addins0.2-cil libmono-cecil-cil libmono-cecil-cil-dev libnuget-core-cil libnuget-core-cil-dev libpango1.0-dev libpangoxft-1.0-0 libpcre16-3 libpcre3-dev libpcre32-3 libpcrecpp0v5 libpixman-1-dev libpthread-stubs0-dev libsctp-dev libsctp1 libserf-1-1 libsm-dev libsoup-gnome2.4-1 libsoup2.4-dev libsvn-dev libsvn1 libtool libwebkitgtk-dev libx11-dev libxau-dev libxcb-render0-dev libxcb-shm0-dev libxcb1-dev libxcomposite-dev libxcursor-dev libxdamage-dev libxdmcp-dev libxext-dev libxfixes-dev libxft-dev libxft2 libxi-dev libxinerama-dev libxml-dom-perl libxml-perl libxml-regexp-perl libxml2-dev libxml2-utils libxrandr-dev libxrender-dev nuget nupkg-newtonsoft.json.6.0.8 nupkg-nunit.2.6.4 nupkg-nunit.mocks.2.6.4 nupkg-nunit.runners.2.6.4 po-debconf uuid-dev x11proto-composite-dev x11proto-core-dev x11proto-damage-dev x11proto-fixes-dev x11proto-input-dev x11proto-kb-dev x11proto-randr-dev x11proto-render-dev x11proto-xext-dev x11proto-xinerama-dev xorg-sgml-doctools xtrans-dev
